---
interface Props {
  title: string;
  description: string;
  price: string;
  stripeLink: string; 
  imageClass?: string; // Para simular diferentes colores de fondo en la imagen
}

const { title, description, price, stripeLink, imageClass = "bg-pink-200" } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 flex flex-col h-full border border-gray-100">
    <div class={`h-48 w-full ${imageClass} flex items-center justify-center text-pink-400`}>
        <span class="text-4xl">ðŸ’…</span>
    </div>
    <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-xl font-bold text-gray-800 mb-2">{title}</h3>
        <p class="text-gray-600 text-sm mb-4 flex-grow">{description}</p>
        <div class="mt-auto">
            <p class="text-2xl font-bold text-pink-600 mb-4">{price}</p>
            <a 
                href={stripeLink} 
                target="_blank" 
                class="block w-full text-center bg-gray-900 text-white py-2 rounded-lg hover:bg-pink-500 transition font-medium"
            >
                Inscribirme
            </a>
        </div>
    </div>
</div>